{
  "name": "wg-util",
  "version": "1.0.0",
  "description": "JavaScript util",
  "main": "./build/index.js",
  "scripts": {
    "dev": "npm run tsc:w",
    "build": "npm run test && npm run lint && tsc",
    "lint": "prettier --write --parser typescript 'src/**/*.ts' 'test/**/*.ts'",
    "test:w": "jest --watchAll",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git add . && lint-staged && tsc "
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "author": "warriorg",
  "license": "ISC",
  "dependencies": {
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "ts-jest": "^24.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  }
}
